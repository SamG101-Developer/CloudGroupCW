
<div>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark navSize">
            <a class="navbar-brand">
                <img src="/static/assets/VPQ_Logo.png" width="45" height="45" alt="logo" style="padding-left: 0.2vw">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Create</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Host</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Join</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div id="createQuizContainer">
        <div id="buttonRow">
            <button class="btn btn-lg btn-info" id="createQuizButton" onclick="createQuiz(window.app.user.username)">Create</button>
        </div>
        <div class="createQuizContent">
            <div class="quizMaker">
                <div class="tab-container" id="createQuizTabList">
                    <div class="tab"><h5 onclick="addTab()" role="tab">Add Round</h5></div>
                </div>
                <div class="scroller-content" id="round-content"></div>
            </div>
            <div id="questionSearch">
                <div class="titleContainer">
                    <h4>Question Search</h4>
                </div>
                <label>Search for:
                    <input id="usernameToSearch"  class="inputFieldRound" type="text" v-model="questionSearchUsernameField" placeholder="Username">
                </label>
                <button id="searchButton" @click="searchDatabaseForQuestions()">Search</button>
                <div class="question-scroller">
                    <div v-for="question in queriedQuestions" class="questionSearchOption">
                        <button class="addQuestionButton roundTabButton" @click="handleAddSearchedQuestion(question)">Add Question</button>
                        <br>
                        <div class="questionInfo">
                            <div class="questionData">
                                <p>Question Type: {{question.questionType}}</p>
                            </div>
                            <div class="questionData">
                                <p>Question: {{question.questionText}}</p>
                            </div>
                            <div class="questionData">
                                <p>Answer: {{question.answer}}</p>
                            </div>
                            <div v-if="question.questionType === 'Multiple Choice'" class="questionData">
                                Options:<br>
                                <ul v-for="option in question.options" >
                                    <li style="padding: 0.1vh">{{option}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
