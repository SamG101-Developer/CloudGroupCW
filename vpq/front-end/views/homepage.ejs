<body class="login">
  <div class="container-login text-center">
    <div>
      <img src="/static/assets/VPQ_Logo.png" width="200" height="200" alt="Virtual Pub Quiz Logo" class="logo-login">
    </div>
    <h1 class="login">Welcome to Virtual Pub Quiz</h1>
    <p class="login">Choose an option:</p>
    <div class="btn-container-login">
      <button @click="createQuiz" class="btn btn-primary btn-login">Create Quiz</button>
      <button @click="hostQuiz" class="btn btn-secondary btn-login">Host Quiz</button>
      <button @click="joinQuiz" class="btn btn-success btn-login">Join Quiz</button>
      <button @click="manageAccount" class="btn btn-info btn-login">Manage Account</button>
      <button @click="friends" class="btn btn-warning btn-login">Friends</button>
    </div>
    <!-- Logout Button -->
    <button @click="logout" class="btn btn-danger logout-btn-login">Logout</button>
  </div>
</body>
