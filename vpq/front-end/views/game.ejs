<div>
    <div v-if="game_state == 'lobby'">
        <%- include('game/lobby'); -%>
        <div v-if="is_host">
            <button @click="incrementGameState()">Start Game</button>
        </div>
    </div>
    <div v-else-if="game_state == 'round_splash'">
        <%- include('game/round_splash'); -%>
    </div>
    <div v-else-if="game_state == 'question'">
        <%- include('game/question'); -%>
    </div>
    <div v-else-if="game_state == 'answer'">
        <div v-if="is_host">
            <%- include('game/answer_countdown'); -%>
        </div>
        <div v-else>
            <%- include('game/answer'); -%>
        </div>
    </div>
    <div v-else-if="game_state == 'round_score'">
        <%- include('game/round_score'); -%>
    </div>
    <div v-else-if="game_state == 'final_score'">
        <%- include('game/final_score'); -%>
    </div>
    <div v-else>
        <h1>Error!</h1>
    </div>
</div>
